@page
@model ProjectDefense.Pages.Lecturer.DefineAvailabilityModel
@{
    ViewData["Title"] = "Define Availability";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.RoomId" class="control-label"></label>
                <select asp-for="Input.RoomId"
                        class="form-control"
                        asp-items="Model.RoomOptions">
                    <option value="">-- Select Room --</option>
                </select>
                <span asp-validation-for="Input.RoomId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.StartDate" class="control-label"></label>
                <input asp-for="Input.StartDate" type="date" class="form-control" />
                <span asp-validation-for="Input.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.EndDate" class="control-label"></label>
                <input asp-for="Input.EndDate" type="date" class="form-control" />
                <span asp-validation-for="Input.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.StartTime" class="control-label"></label>
                <input asp-for="Input.StartTime" type="time" class="form-control" />
                <span asp-validation-for="Input.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.EndTime" class="control-label"></label>
                <input asp-for="Input.EndTime" type="time" class="form-control" />
                <span asp-validation-for="Input.EndTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.SlotDurationMinutes" class="control-label"></label>
                <input asp-for="Input.SlotDurationMinutes" type="number" class="form-control" />
                <span asp-validation-for="Input.SlotDurationMinutes" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create Availability & Generate Slots" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}